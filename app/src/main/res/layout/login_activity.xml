<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/renk"
    android:weightSum="1">

    <Button
        android:id="@+id/btn_aile_giris"
        android:background="@color/mavi"
        android:layout_width="237dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginTop="169dp"
        android:layout_weight="0.05"
        android:text="ebeveyn girisi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_bakici_giris"
        app:layout_constraintHorizontal_bias="0.47"
        tools:layout_editor_absoluteY="155dp" />


    <Button

        android:id="@+id/btn_bakici_giris"
        android:layout_width="276dp"
        android:layout_height="55dp"
        android:background="@color/mavi"
        android:layout_marginTop="60dp"
        android:text="Bakici girisi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_aile_giris" />

    <Button
        android:id="@+id/uye"
        android:layout_width="357dp"
        android:layout_height="57dp"
        android:background="@color/mavi"
        android:layout_marginLeft="16dp"
        android:text="uye olmak icin"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.766"
        tools:layout_editor_absoluteY="390dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mesaj"
        android:layout_width="61dp"
        android:layout_height="81dp"
        android:layout_marginLeft="296dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_email"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

</android.support.constraint.ConstraintLayout>